{
  "name": "ir-regular/hopper",
  "description": "Functions for working with deeply-nested data in PHP",
  "type": "library",
  "authors": [
    {
      "name": "Jane Olszewska",
      "email": "3jane@3jane.co.uk"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-ctype": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "squizlabs/php_codesniffer": "^3.3",
    "phpstan/phpstan": "^0.10.2"
  },
  "scripts": {
    "ci": [
      "bin/phpcs",
      "bin/phpstan analyze --level max ./src",
      "bin/phpunit --testsuite unit --testdox"
    ],
    "test": [
      "bin/phpunit --testsuite unit"
    ]
  },
  "autoload": {
    "psr-4": {
      "IrRegular\\Hopper\\": "src/"
    },
    "files": [
      "src/apply.php",
      "src/compose.php",
      "src/first.php",
      "src/foldl.php",
      "src/foldl1.php",
      "src/foldr.php",
      "src/foldr1.php",
      "src/get.php",
      "src/get_in.php",
      "src/hash_map.php",
      "src/identity.php",
      "src/is_empty.php",
      "src/is_key.php",
      "src/keys.php",
      "src/last.php",
      "src/lmap.php",
      "src/map.php",
      "src/partial.php",
      "src/partial_first.php",
      "src/partial_last.php",
      "src/pipe_first.php",
      "src/pipe_last.php",
      "src/rest.php",
      "src/second.php",
      "src/set.php",
      "src/size.php",
      "src/values.php",
      "src/vector.php",
      "src/Language/convert_to_key.php",
      "src/Language/is_valid_key.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "IrRegular\\Tests\\Hopper\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "bin-dir": "bin",
    "platform": {
      "php": "7.2"
    }
  }
}
